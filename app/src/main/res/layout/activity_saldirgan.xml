<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Saldirgan"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tür" />

        <Spinner
            android:id="@+id/tur"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/tur"
            android:minHeight="48dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView23"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Konum" />

        <EditText
            android:id="@+id/konum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Konum Giriniz"
            android:inputType="textPostalAddress"
            android:digits="abcdefghijklmnopqrstuvwxyz "
            android:minHeight="48dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView24"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Açıklama" />

        <EditText
            android:id="@+id/aciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Açıklama Giriniz"
            android:digits="abcdefghijklmnopqrstuvwxyz "/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Durum" />

        <Spinner
            android:id="@+id/durum"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/durum"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gonder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:hint="Gönder"
            android:text="Gönder" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saldırgan Sokak Hayvanları Bildirim Listesi"
            android:layout_marginTop="20dp"
            android:minHeight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Tür"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Konum"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Açıklama"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:text="Durum"
                    android:gravity="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tur2"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:hint="Tür"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/konum2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:hint="Konum"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/aciklama2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:hint="Açıklama"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/durum2"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:hint="Durum"
                    android:gravity="center" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>